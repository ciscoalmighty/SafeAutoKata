@model IEnumerable<FileUpload.Models.Driver>

@{
    ViewData["Title"] = "Success";
    string at = "@";
}

<title>W3.CSS Template</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body, h1, h2, h3, h4, h5, h6 {
        font-family: "Raleway", sans-serif
    }

    body, html {
        height: 100%;
        line-height: 1.8;
    }

    /* Full height image header */
    .bgimg-1 {
        background-position: center;
        background-size: cover;
        background-image: url("/w3images/mac.jpg");
        min-height: 100%;
    }

    .w3-bar .w3-button {
        padding: 16px;
    }
</style>
<!-- Image header -->
<div class="container">
    <img src="~/mac.jpg" style="width:100%" />
    <div class="w3-display-left w3-text-white" style="padding:48px">
        <span class="w3-jumbo w3-hide-small">Success</span><br>
        <span class="w3-xxlarge w3-hide-large w3-hide-medium">Success</span><br>
        <div class="w3-container">
            <table class="w3-table-all w3-card-4">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Name) </th>
                    <th> @Html.DisplayNameFor(model => model.Miles) </th>
                    <th></th>
                    <th>@Html.DisplayNameFor(model => model.Mph)</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Miles) miles
                        </td>
                        @if (item.Miles > 0)
                        {
                            <td>
                                @at
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mph) mph
                            </td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

